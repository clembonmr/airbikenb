<%= simple_form_for (@bike) do |f| %>
  <%= f.input :brand %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <% f.input :photo_cache, as: :hidden %>
  <%= f.input :daily_price %>
  <%= f.input :location %>
  <%= f.submit "Rent your bike to travelers", class: "btn btn-primary" %>
  <%= link_to "Go Back on Your Profile", profile_path(current_user.id), class: "btn btn-warning" %>

<% end %>
