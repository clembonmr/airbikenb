<div class="banner">
  <div class="banner-content">
    <h1>AirBike'nB</h1>
    <div class="fixed-block">
      <h2>Find a perfect bike for your next destination</h2>
    </div>
    <%= link_to "Search for bike around you", new_bike_path, class: 'btn new-button' %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-xs-6 col-sm-6 col-md-4">
        <div class="card">
          <% if bike.photo %>
            <div class="card-header" style="background-image: url('<%= image_path bike.photo%>')">
              <p><%= link_to bike.brand, bike_path(bike) %></p>
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('<%= cl_image_tag("653px-usdot_highway_sign_bicycle_symbol_-_blacksvg.png") %>'); border: 1px solid">
            </div>
          <% end %>
          <div class="card-body">
            <p><%= bike.category %></p>
            <p><%= bike.daily_price %> $/day</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="map-container">
  <div id="map" style="width: 80%; height: 600px;" data-markers="<%= @markers.to_json %>"
  ></div>
</div>

