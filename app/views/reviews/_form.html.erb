
<%= simple_form_for ([@review]) do |f| %>
<div id="rating-form">
  <label for="">Rating</label>
</div>
<%= f.input :description %>
<%= f.submit "Submit review", class: "btn btn-primary" %>
<%= link_to "Go Back to your profile", profile_path(current_user.id), class: "btn btn-warning" %>

<% end %>



<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rate]'
  });
</script>
