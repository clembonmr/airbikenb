
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2> <%= @user.name %></h2>
      <%= cl_image_tag @user.photo, height: 100, width: 200, crop: :fill %>
      <p> Email: <%= @user.email %></p>
      <p> Phone: <%= @user.phone_number %></p>
      <%= link_to "Edit Your Profile", edit_user_registration_path(current_user.id) %>
    </div>
  </div>


    <div class="container">
       <div class="row">
      <div class="col-lg-12">
      <h2>Bikes that I rented</h2>
      </div>
    </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div style="display: flex; justify-content: start">
      <div><p><% @user.bookings.each do |booking|%></p></div>
      <%= cl_image_tag booking.bike.photo, height: 100, width: 200, crop: :fill, class: "card-avatar" %>
      <div><p> Booking reference : <%=booking.id %></p></div>
      <div><p> Start date: <%= booking.start_date.strftime("%A, %b %d") %></p></div>
      <div><p> End date: <%= booking.end_date.strftime("%A, %b %d") %></p></div>
      <div><p>Total price: <%= booking.total_price %> EUR</p></div>
      <div><%= link_to 'See bike', bike_path(booking.bike_id) %></div>
      <% if Review.where(booking_id: booking.id) == []  %>
      <%= link_to "review your experience", new_booking_review_path(booking.id) %>
      <% else %>
      <div><p>Your rate: <%= booking.review.rate %></p></div>
      <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>

<% if @user.owner? %>
  <div class="container">
    <div class="row">
        <h2>People booked my bikes</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-lg-4 col-lg-offset-5 card">
      <h3>My bikes</h3>
      <% @user.bikes.each do |bike| %>
      <%=bike.brand %>
      <%=bike.category%>
      <%=bike.daily_price%>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div style="display: flex; justify-content: start">
        <div><% @user.my_rentals.each do |booking|%></div>
        <%= cl_image_tag booking.bike.photo, height: 100, width: 200, crop: :fill, class: "card-avatar" %>
        <div><p> Booking reference : <%=booking.id %></p></div>
        <div><p> Start date: <%= booking.start_date.strftime("%A, %b %d") %></p></div>
        <div><p> End date: <%= booking.end_date.strftime("%A, %b %d") %></p></div>
        <div><p>Total price: <%= booking.total_price %> EUR</p></div>
        <div><%= link_to 'See bike', bike_path(booking.bike_id) %></div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
<div class="row">
    <div class="col-xs-12 col-lg-4 col-lg-offset-4 card">
      <h3><%= link_to 'Have a bike? Start generating revenues', new_bike_path %></h3>
  </div>
</div>
 <% end %>

